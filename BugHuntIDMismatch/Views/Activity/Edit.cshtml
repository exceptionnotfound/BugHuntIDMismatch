@model BugHuntIDMismatch.ViewModels.ActivityEditVM

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm("EditPost", "Activity", FormMethod.Post))
{
    @Html.HiddenFor(x => x.ID)
    @Html.HiddenFor(x => x.ActivityID)
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-lg-6">
                @Html.DisplayFor(x => x.Description)
                @Html.TextBoxFor(x => x.Description)
            </div>
            <div class="col-md-6 col-lg-6">
                @Html.DisplayFor(x => x.TargetDate)
                @Html.EditorFor(x => x.TargetDate)
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
}